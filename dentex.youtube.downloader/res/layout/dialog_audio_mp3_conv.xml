<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/mp3_info_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/mp3_bitrate_title" />

    <Spinner
        android:id="@+id/mp3_spinner_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:entries="@array/mp3_bitrate_entries"
        android:padding="10dp"
        android:saveEnabled="true" />

    <Button
        android:id="@+id/id3_button_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="editId3Tags"
        android:padding="10dp"
        android:text="@string/edit_id3_tags" />

    <LinearLayout
        android:id="@+id/rem_ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/rem_original_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
		<TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:paddingRight="5dp"
	        android:text="@string/remove_original_audio" />
		
    </LinearLayout>

</LinearLayout>